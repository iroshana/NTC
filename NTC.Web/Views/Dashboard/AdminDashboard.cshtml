
@{
    ViewBag.Title = "Dashboard";
}

<!-- page content -->
<div class="right_col" role="main" id="dash">
    <div class="">
        <div class="row top_tiles">
            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <a href="@Url.Action("List", "DriverConductor")">
                    <div class="tile-stats">
                        <div class="icon"><i class="fa fa-user"></i></div>
                        <div class="count">&nbsp;</div>
                        <h3>Driver/ Conductor</h3>
                        <p>driver conductor details</p>
                    </div>
                </a>
            </div>
            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <a href="@Url.Action("Panalties", "DriverConductor")">
                    <div class="tile-stats">
                        <div class="icon"><i class="fa fa-comments-o"></i></div>
                        <div class="count">&nbsp;</div>
                        <h3>Panalties</h3>
                        <p>Monthly Panalties.</p>
                    </div>
                </a>
            </div>
            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <a href="@Url.Action("PublicNotice", "DriverConductor")">
                    <div class="tile-stats">
                        <div class="icon"><i class="fa fa-sticky-note-o"></i></div>
                        <div class="count">&nbsp;</div>
                        <h3>Notice</h3>
                        <p>General Notice.</p>
                    </div>
                </a>
            </div>
            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <a href="@Url.Action("ChartDiaplay", "Charts")">
                    <div class="tile-stats">
                        <div class="icon"><i class="fa fa-line-chart"></i></div>
                        <div class="count">&nbsp;</div>
                        <h3>Charts</h3>
                        <p>NTC Charts</p>
                    </div>
                </a>
            </div>

        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Driver <small></small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>                            
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <div class="row top_tiles" style="margin: 10px 0;">
                            <div class="animated flipInY col-lg-4 col-md-4 col-sm-6 col-xs-12" v-on:click="redNoticeDriver">
                                <div class="tile-stats">
                                    <div class="icon"><i class="fa fa-users"></i></div>
                                    <div class="count" v-cloak>{{ wighet.redNoticeDrivers}}</div>

                                    <h3></h3>
                                    <p>Red Notice Drivers.</p>
                                </div>
                            </div>
                            <div class="animated flipInY col-lg-4 col-md-4 col-sm-6 col-xs-12" v-on:click="highestNoofComplainDriver">
                                <div class="tile-stats">
                                    <div class="icon"><i class="fa fa-user-secret"></i></div>
                                    <div class="count" v-cloak>{{ wighet.highestDriverComplain}}</div>

                                    <h3></h3>
                                    <p>Highest Number of Complain.</p>
                                </div>
                            </div>
                            <div class="animated flipInY col-lg-47 col-md-4 col-sm-6 col-xs-12" v-on:click="highestNoOfPointDriver">
                                <div class="tile-stats">
                                    <div class="icon"><i class="fa fa-user-plus"></i></div>
                                    <div class="count" v-cloak>{{ wighet.highestDriverPoints }}</div>

                                    <h3></h3>
                                    <p>Highest Number of Points.</p>
                                </div>
                            </div>
                        </div>

                        <div class="row top_tiles" style="margin: 10px 0;">
                            <div class="animated flipInY col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="tile-stats">
                                    <div class="icon"><i class="fa fa-user"></i></div>
                                    <div class="count" v-cloak>{{wighet.bestdriversofMonth}}</div>
                                    <p>Best Driver of the Months.</p>
                                    <input id="driverMonth" type="text" placeholder="MM/DD/YYYY" class="form-control fc-datepicker hasDatepicker" />
                                    <br />
                                    <div class="col-md-6 pull-left">
                                        <a class="btn btn-primary btn-sm" v-on:click="bestDriverMonth">Go</a>
                                    </div>                                    
                                </div>
                            </div>

                            <div class="animated flipInY col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="tile-stats">
                                    <div class="icon"><i class="fa fa-user"></i></div>
                                    <div class="count" v-cloak>{{wighet.bestdriversofYear}}</div>
                                    <p>Best Driver of the Year.</p>
                                    <input id="driverYear" type="text" placeholder="MM/DD/YYYY" class="form-control fc-datepicker hasDatepicker" />
                                    <br />
                                    <div class="col-md-6 pull-left">
                                        <a class="btn btn-primary btn-sm" v-on:click="bestDriverYear">Go</a>
                                    </div> 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Conductor <small></small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <div class="row top_tiles" style="margin: 10px 0;">
                            <div class="animated flipInY col-lg-4 col-md-4 col-sm-6 col-xs-12" v-on:click="redNoticeConductor">
                                <div class="tile-stats">
                                    <div class="icon"><i class="fa fa-users"></i></div>
                                    <div class="count" v-cloak>{{wighet.redNoticeConductors}}</div>

                                    <h3></h3>
                                    <p>Red Notice Conductors.</p>
                                </div>
                            </div>
                            <div class="animated flipInY col-lg-4 col-md-4 col-sm-6 col-xs-12" v-on:click="highestNoofComplainConductor">
                                <div class="tile-stats">
                                    <div class="icon"><i class="fa fa-user-secret"></i></div>
                                    <div class="count" v-cloak>{{ wighet.highestConductorComplain}}</div>

                                    <h3></h3>
                                    <p>Highest Number of Complaint.</p>
                                </div>
                            </div>
                            <div class="animated flipInY col-lg-4 col-md-4 col-sm-6 col-xs-12" v-on:click="highestNoOfPointConductor">
                                <div class="tile-stats">
                                    <div class="icon"><i class="fa fa-user-plus"></i></div>
                                    <div class="count" v-cloak>{{wighet.highestConductorPoints}}</div>
                                    <h3></h3>
                                    <p>Highest Number of Points.</p>
                                </div>
                            </div>
                        </div>

                        <div class="row top_tiles" style="margin: 10px 0;">
                            <div class="animated flipInY col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="tile-stats">
                                    <div class="icon"><i class="fa fa-user"></i></div>
                                    <div class="count" v-cloak>{{wighet.bestConductorsofMonth}}</div>
                                    <p>Best Conductor of the Months.</p>
                                    <input id="conMonth" type="text" placeholder="MM/DD/YYYY" class="form-control fc-datepicker hasDatepicker" />
                                    <br />
                                    <div class="col-md-6 pull-left">
                                        <a class="btn btn-primary btn-sm" v-on:click="bestConductorMonth">Go</a>
                                    </div>
                                </div>
                            </div>

                            <div class="animated flipInY col-lg-4 col-md-4 col-sm-6 col-xs-12">
                                <div class="tile-stats">
                                    <div class="icon"><i class="fa fa-user"></i></div>
                                    <div class="count" v-cloak>{{wighet.bestConductorsofYear}}</div>
                                    <p>Best Conductor of the Year.</p>
                                    <input id="conYear" type="text" placeholder="MM/DD/YYYY" class="form-control fc-datepicker hasDatepicker" />
                                    <br />
                                    <div class="col-md-6 pull-left">
                                        <a class="btn btn-primary btn-sm" v-on:click="bestConductorYear">Go</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- /page content -->


@*Alert*@

<div aria-labelledby="myModalLabel" role="dialog" id="alertModal" class="modal fade" aria-hidden="true">
    <div class="modal-dialog modal-val">
        <div class="modal-content">
            <div class="modal-header" v-bind:class="{'alert-success' : isSuccess, 'alert-danger' : !isSuccess}">
                <button data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h3 class="bold-700">{{header}}</h3>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 col-xs-12" id="alertInfo">
                        <div class="alert rounded" id="alert">
                            <div class="icon center-block text-center"><i class="fa fa-4x" v-bind:class="{'fa-close' : !isSuccess, 'fa-check': isSuccess}"></i></div>
                            <span class="center-block text-center" id="alertMessage">{{alertMessage}}</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn" v-bind:class="{'btn-success' : isSuccess, 'btn-danger' : !isSuccess}" type="button" id="closeAlert"><i class="fa fa-times-circle"></i> Close</button>
            </div>
        </div>
    </div>
</div>

@*End Alert*@
<style>
    [v-cloak] {
        display: none;
    }
</style>

